// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id      Int     @id @default(autoincrement())
  email   String  @unique
  nome    String
  senha   String
  perfil  String  @default("default")
  login   String  @unique
  token   String?
  dtToken DateTime?
}

model Grupo {
  id        Int     @id @default(autoincrement())
  nome      String  @unique
  descricao String?
  tipo      String  @default("D")
  subGrupos SubGrupo[]
}

model SubGrupo {
  id              Int      @id @default(autoincrement())
  nome            String
  descricao       String?
  grupo           Grupo?   @relation(fields: [grupoId], references: [id])
  grupoId         Int
  SG_lancamentos  Lancamento[]
}

model Fonte {
  id                Int     @id @default(autoincrement())
  nome              String
  descricao         String?
  tipo              String  @default("M")
  fonte_lancamentos Lancamento[]
}

model Periodo {
  id            Int       @id @default(autoincrement())
  periodo       String
  dtAtualizacao DateTime
  status        String    @default("A") 
}

model Saldo {
  id      Int      @id @default(autoincrement())
  periodo String
  valor   Decimal  @default(0.00)
}

model Lancamento {
  id            Int      @id @default(autoincrement())
  periodo       String
  valor         Decimal  @default(0.00)
  dtLancamento  DateTime?
  operacao      String @default("D") 
  subGrupo      SubGrupo?    @relation(fields: [subGrupoId], references: [id])
  subGrupoId    Int
  fonte         Fonte?    @relation(fields: [fonteId], references: [id])
  fonteId       Int
}